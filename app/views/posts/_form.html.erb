<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <center>
  
  <div class="field" >
    <%= f.text_area :body, :rows=>"2", :cols=>"70", :placeholder=>"Add your own tradition.", required: true %>
  </div>
  <div class="field btn btn-default">
    <%= f.radio_button(:religion, :christianity, required: true ) %>
    <%= f.label(:religion_christianity, "Christianity") %>
    <%= f.radio_button(:religion, :islam, required: true ) %>
    <%= f.label(:religion_islam, "Islam") %>
    <%= f.radio_button(:religion, :judaism, required: true ) %>
    <%= f.label(:religion_judaism, "Judaism") %>
    <%= f.radio_button(:religion, :other, required: true ) %>
    <%= f.label(:religion_other, "Other") %>
    <!-- <br></br>
    <%= f.label :title %>
    <%= f.text_field :title %> -->
  </div>
  <div class="actions">
    <%= f.submit "Submit", class: 'btn btn-success' %>
  </div>
</center>
<% end %>
